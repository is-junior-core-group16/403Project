@model _403Project1.Models.Requests

@{
    ViewBag.Title = "SoftwareInput";
}

<h2>SoftwareInput</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Requests</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <strong class="control-label col-md-2">What software would you like to request?</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Software, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Software, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
